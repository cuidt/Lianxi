<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/raw_1500974387"
    android:orientation="vertical"
    tools:context="quarter.com.lianxi.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:src="@mipmap/left_jt" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9" />

        <TextView
            android:id="@+id/user_reg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="2"
            android:text="注册账号"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@mipmap/log" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="40dp"
        android:layout_marginTop="100px"
        android:background="#805B5450"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="5"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="账号"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/login_num"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="#9F9798" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="5"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="密码"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:background="@null"
                android:maxLines="1"
                android:password="true"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#F7BF6A"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/wjmm"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical|right"
        android:text="忘记密码"
        android:textColor="#B5B3B5"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ykdl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="游客登录"
        android:textColor="#B5B3B5"
        android:textSize="20dp" />

</LinearLayout>
